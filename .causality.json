{
  "desc": "Auto generated by causality [c-watch]",
  "triggers": [
    {
      "name": "c-watch",
      "patterns": [
        "**/*.go",
        "**/*.c",
        "**/*.py"
      ],
      "env": {
        "DEBUG": "1"
      },
      "cmd": "go test -v",
      "shell": true,
      "delay": "100ms",
      "stop_timeout": "500ms",
      "signal": "KILL",
      "kill_signal": ""
    }
  ],
  "watch_paths": [
    "."
  ],
  "watch_depth": 0
}